# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Firebase Configuration
# オプション1: サービスアカウントキーファイルのパス
FIREBASE_SERVICE_ACCOUNT_KEY=/path/to/firebase-service-account.json

# オプション2: JSON文字列として設定
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key_id":"..."}

# オプション3: 個別の環境変数として設定（CI/CDやクラウド環境で便利）
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
# FIREBASE_CLIENT_ID=1234567890

# 認証設定
# 開発環境で認証を無効にする場合はtrueに設定
DISABLE_AUTH=false

# CORS設定（本番環境では適切なオリジンを設定）
ALLOWED_ORIGINS=*